
<div class="header">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center">
        <div class="col">
          <!-- Pretitle -->
          <h6 class="header-pretitle"><%= link_to resource.friendly_name.pluralize, resource.index_path %></h6>
          <!-- Title -->
          <h1 class="header-title"><%= resource.display_name(@record) %></h1>
        </div>

        <!-- Actions -->
        <div class="col-auto">
          <%= link_to resource.edit_path(@record), class: "btn btn-white d-inline-flex" do %>
            <i class="fe fe-edit"></i>
            <span class="ms-2">Edit</span>
          <% end %>
          <%= link_to resource.show_path(@record), class: "btn btn-white text-danger ms-2", 
              method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fe fe-trash"></i>
            <span class="ms-2">Destroy</span>
          <% end %>
        </div>
      </div>

      <!-- Relations -->
      <div class="row align-items-center">
        <div class="col">
          <ul class="nav nav-tabs nav-overflow header-tabs">
            <!--
            <li class="nav-item">
              <a href="#" class="nav-link active">
                Overview
              </a>
            </li>
            -->
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <% resource.attributes.values.each do |attribute| %>
        <% next if attribute.field.nil? %>
        <% next unless attribute.field.visible?(action_name) %>

        <div class="field_container">
          <%= attribute.field.attribute_name.to_s.titleize %>
          
          <%= render partial: attribute.field.to_partial_path("show"), locals: { field: attribute.field, record: @record, resource: resource } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
