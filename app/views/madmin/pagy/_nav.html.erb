<%#
  This template is i18n-ready: if you don't use i18n, then you can replace the pagy_t
  calls with the actual strings ("&lsaquo; Prev", "Next &rsaquo;", "&hellip;").
  The link variable is set to a proc that returns the link tag.
  Usage: link.call( page_number [, text [, extra_attributes_string ]])
-%>
<% link = pagy_link_proc(pagy, link_extra: 'class="page-link"') -%>

<ul class="list-pagination-prev pagination pagination-tabs card-pagination">
  <% if pagy.prev -%>
    <li class="page-item">
      <%== link.call(pagy.prev, 'class="ps-0 pe-4 border-end"') do %>
        <i class="fe fe-arrow-left me-1"></i> <%== pagy_t('pagy.nav.prev') %>
      <% end %>
    </li>
  <% else -%>
    <li class="page-item prev disabled">
      <a href="#" class="page-link">
        <i class="fe fe-arrow-left me-1"></i> <%== pagy_t('pagy.nav.prev') %>
      </a>
    </li>
  <% end %>
</ul>

<!-- Pagination -->
<ul class="list-pagination pagination pagination-tabs card-pagination">
  <% pagy.series.each do |item| # series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36] -%>
    <% if item.is_a?(Integer) -%>    
      <li class="page-item"><%== link.call(item) %></li>
    <% elsif item.is_a?(String) -%>    
      <li class="page-item active"><%== link.call(item) %></li>
    <% elsif item == :gap -%>    
      <li class="page-item disabled gap">
        <a href="#" class="page-link"><%== pagy_t('pagy.nav.gap') %></a>
      </li>
    <% end -%>
  <% end -%>
</ul>

<ul class="list-pagination-next pagination pagination-tabs card-pagination">
  <% if pagy.next -%>
    <li class="page-item">
      <%== link.call(pagy.next, 'class="ps-4 pe-0 border-start"') do %>
        <i class="fe fe-arrow-right me-1"></i> <%== pagy_t('pagy.nav.next') %>
      <% end %>
    </li>
  <% else -%>
    <li class="page-item next disabled">
      <a href="#" class="page-link">
        <i class="fe fe-arrow-right me-1"></i> <%== pagy_t('pagy.nav.next') %>
      </a>
    </li>
  <% end %>
</ul>