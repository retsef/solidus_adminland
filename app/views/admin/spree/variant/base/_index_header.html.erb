
<% content_for(:title) do %>
  <%= display_resource_name(page.resource_name) %>
<% end %>

<!-- Header -->
<header class="header mt-md-5" role="banner">
  <div class="header-body">
    <div class="row align-items-center">
      <div class="col-auto">
        <!-- Avatar -->
        <div class="avatar avatar-lg avatar-4by3">
          <%- gallery = parent_page.resource.gallery.images %>
          <%- image_src = gallery.any? && gallery.first.attachment.attached? ? url_for(gallery.first.attachment) : image_path('admin/default-placeholder.png') %>
          <img src="<%= image_src %>" alt="<%= parent_page.resource.name %>" class="avatar-img rounded">
        </div>
      </div>

      <div class="col ms-n3 ms-md-n2">
        <!-- Pretitle -->
        <h6 class="header-pretitle">
          <%= link_to t("administrate.actions.back"), :back %>
        </h6>
        <!-- Title -->
        <h1 class="header-title text-truncate">
          <%= content_for(:title) %>
        </h1>
      </div>


      <div class="col-auto">
        <!-- Actions -->
        <%= render(
          "index_header_actions",
          page: page,
          parent_page: parent_page,
          resources: resources
        ) %>
      </div>
    </div>

    <div class="row align-items-center">
      <div class="col">
        <!-- Tabs -->
        <%= render 'admin/spree/products/tabs', page: parent_page, namespace: namespace %>
      </div>
    </div>
  </div>
</header>