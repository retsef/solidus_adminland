<form class="search" role="search">
  
  <div class="input-group input-group-flush input-group-merge input-group-reverse">

    <%= link_to clear_search_params, class: "input-group-text" do %>
      <span class="d-none"><%= t("administrate.search.clear") %></span>
      <i class="fe fe-clear"></i>
    <% end %>

    <input class="form-control list-search"
          id="search" type="search" name="search"
          placeholder="<%= t("administrate.search.label",
                              resource: resource_name) %>"
          value="<%= search_term %>">
          
    <span class="input-group-text">
      <i class="fe fe-search"></i>
    </span>
  </div>

</form>