<%- frame_id = dom_id(form.object, "#{attribute}_inline") %>
<%= turbo_frame_tag frame_id, class: 'contents' do %>
  <%= yield %>

  <%= form.button class: 'btn btn-sm text-primary inline-action' do %>
    <span>Save</span>
    <i class="icon ti ti-check"></i>
  <% end %>

  <%= link_to polymorphic_path([namespace, form.object]), class: 'btn btn-sm text-danger inline-action' do %>
    <span>Cancel</span>
    <i class="icon ti ti-x"></i>
  <% end %>
<% end %>
