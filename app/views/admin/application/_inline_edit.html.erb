<%- frame_id = dom_id(resource, "#{attribute}_inline") %>
<%= form_for [namespace, resource], class: 'contents', data: { turbo_frame: frame_id } do |_f| %>
  <%= turbo_frame_tag frame_id, class: 'inline-edit' do %>
    <%= yield %>

    <%= link_to polymorphic_path([:edit, namespace, resource]), class: 'btn btn-sm btn-ghost-primary inline-action' do %>
      <i class="icon ti ti-edit"></i>
      Modifica
    <% end %>
  <% end %>
<% end %>