<fieldset class="list-group-item nested-fields" data-new-record=<%= f.object.new_record?%>>
  <div class="row align-items-center">

    <% field.nested_fields_for_builder(f).each do |attribute| -%>
      <div class="col field-unit field-unit--<%= attribute.html_class %>">
        <%= render_field attribute, f: f %>
      </div>
    <% end -%>


    <div class="col-auto" style="padding-top: 1.7rem;">
      <%= link_to("#",
            class: "btn btn-outline-danger btn-icon nested-fields__remove-btn",
            title: t("administrate.fields.nested_has_many.remove",
              # resource: field.associated_class_name.titleize), 
              resource: field.associated_class.model_name.human),
            data: { 
              action: "click->nested-form#remove_association",
              'bs-toggle': "tooltip", 'bs-placement': "top"
            }) do %>
        <i class="icon ti ti-trash"></i>
      <% end %>
    </div>
  </div>
  
  <%= f.hidden_field :_destroy %>
</fieldset>